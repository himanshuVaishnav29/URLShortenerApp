<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include("./partials/header")%>
    <style>
        body{
          background: radial-gradient(circle at 10% 20%, rgb(0, 0, 0) 0%, rgb(64, 64, 64) 90.2%);
          font-family: 'Courier New', Courier, monospace;
        }
        .monospaceFont{
            font-family: 'Courier New', Courier, monospace;
            color: black;
        }
        .containerColor{
            background: linear-gradient(180.2deg, rgb(120, 85, 137) -6.9%, rgb(35, 9, 31) 76.7%);
         }
        .loginPageImage{
          opacity: 0.6;
          background-color: gray;
          height: 350px;
        }
        
    </style>
    <title>LOGIN</title>
</head>
<body>
    <%-include("./partials/navBar")%>
    
    <section class="vh-100">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-white containerColor" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-1 order-lg-2">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 loginPageHeading ">WELCOME!</p>
                        
                      <form class="mx-1 mx-md-4" action="/login" method="post">
      
                        <% if(locals.error){ %>
                          <div class="container" id="errorAlert">
                            <div class="alert alert-danger" role="alert"><%=locals.error%></div>
                          </div>
                        <% }%>
                        <div class="d-flex flex-row align-items-center mb-4">
                         
                          <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input type="email" id="form3Example3c" class="form-control" name="email" required placeholder="Enter email" />
                            <!-- <label class="form-label" for="form3Example3c">Your Email</label> -->
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          
                          <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input type="password" id="form3Example4c" class="form-control" name="password" required placeholder="Enter Password " />
                            <!-- <label class="form-label" for="form3Example4c">Password</label> -->
                          </div>
                        </div>
      

                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      
                          <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">LOGIN</button>
                        </div>
                        <a href="/signUp">New User? Register here</a>
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-2 order-lg-1">
      
                      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSIqSdYX_UL1J00xhRfS3wjw7Bf4lyqVjkg1tvBAofZdg&s"
                        class="img-fluid loginPageImage" alt="Sample image">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <%-include('./partials/scripts')%>
    <script>
        setTimeout(function() {
            const errorAlert = document.getElementById('errorAlert');
            if (errorAlert) {
                errorAlert.style.display = 'none';
            }
        },3000);
      </script>
</body>
</html>